<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/grinch_green_light</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/grinch_green_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/grinch_blue</item>
    </style>

    <style name="StealButton">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">275dp</item>
        <item name="android:text">@string/main_selected_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:stateListAnimator">@anim/shadow_button</item>
    </style>

</resources>
